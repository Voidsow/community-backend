<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="mysqlForum" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/community"
                        userId="root"
                        password="root">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.voidsow.community.backend.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
            <!--设置全参构造器-->
            <property name="constructorBased" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.voidsow.community.backend.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--        <table tableName="user" domainObjectName="User">-->
        <!--            &lt;!&ndash;false则将列名转换为驼峰形式&ndash;&gt;-->
        <!--            <property name="useActualColumnNames" value="false"/>-->
        <!--        </table>-->
        <!--        <table tableName="post" domainObjectName="Post">-->
        <!--            <property name="useActualColumnNames" value="false"/>-->
        <!--        </table>-->
        <table tableName="comment" domainObjectName="Comment">
            <property name="useActualColumnNames" value="false"/>
        </table>
        <!--        <table tableName="chat" domainObjectName="Chat">-->
        <!--            <property name="useActualColumnNames" value="false"/>-->
        <!--        </table>-->
    </context>
</generatorConfiguration>
